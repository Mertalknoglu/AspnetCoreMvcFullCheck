@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Şifremi Unuttum";
    Layout = "_BlankLayout"; // Giriş sayfası gibi sade bir layout kullan
  
}


<div class="container-xxl">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner">
            <div class="card px-sm-6 px-0">
                <div class="card-body">
                    <h4 class="mb-2">Şifrenizi mi unuttunuz?</h4>
                    <p class="mb-4">Kayıtlı e-posta adresinize yeni bir şifre göndereceğiz.</p>

                    <form asp-action="ForgotPassword" method="post">
                        <div class="mb-3">
                            <input asp-for="Email" class="form-control" placeholder="E-posta adresiniz" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-dark d-grid w-100">Şifre Gönder</button>
                    </form>

                    <script>
                        @if (TempData["PopupSuccess"] != null)
                        {
                            <text>
                                    var msg = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(TempData["PopupSuccess"]));
                                    alert(msg);
                            </text>
                        }
                    </script>
                    <div class="text-center mt-3">
                        <a href="/Account/Login">Giriş ekranına geri dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
