@model AspnetCoreMvcFull.Models.LoginViewModel

@{
    Layout = null;
}
@{
    Layout = "_BlankLayout";
    ViewData["Title"] = "Login Basic - Pages";
}

@section PageStyles {
    <link rel="stylesheet" href="~/vendor/css/pages/page-auth.css">
}


@* ************** Content ************** *@

<div class="container-xxl">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner">
            <!-- Register -->
            <div class="card px-sm-6 px-0">
                <div class="card-body">
                    <!-- Logo -->
                    <div class="app-brand justify-content-center">
                        <a href="/" class="app-brand-link gap-2">
                            <span class="app-brand-logo demo"><img src="~/img/icons/logonun dikey renkli kullanımı.png" height="100" width="100"/></span>
                        </a>
                       
                    </div>
                    <!-- Logo + Başlık Ortalanmış -->
                    <div class="text-center mb-4">                        
                        <h5 class="mt-3 fw-bold text-uppercase" style="color: #000; font-size: 16px; line-height: 1.4;">
                            KAYSERİ İL BAŞKANLIĞI <br /> TALEP YÖNETİMİ
                        </h5>
                    </div>

                    <div>
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                <ul>
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                </ul>
                            </div>
                        }
                    </div>
                  
                    <form id="formAuthentication" action="/Account/Login" class="mb-6"  method="POST">
                        <div class="mb-0">
                            <input asp-for="TcKimlikNo" class="form-control " placeholder="T.C Kimlik Numarası" autocomplete="off" />
                        </div>
                        <div class="mb-6 form-password-toggle">
                            <label class="form-label" for="password"></label>
                            <div class="input-group input-group-merge">
                                  <input type="password" id="password" class="form-control " asp-for="Password" name="password"  placeholder="Parola" aria-describedby="password" />
                                <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-6">
                            <div class="form-check mb-0">
                                <input asp-for="RememberMe" class="form-check-input" id="remember-me" />
                                <label class="form-check-label" for="remember-me">Beni Hatırla</label>

                            </div>

                            <div class="form-check mb-0">
                                <a href="/Account/ForgotPassword" class="form-check-label">Şifremi Unuttum</a>
                            </div>
                        </div>



                        <div class="mb-6">
                            <button class="btn btn-primary d-grid w-100" type="submit">Login</button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /Register -->
        </div>
    </div>
</div>
