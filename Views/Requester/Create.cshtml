@model Requester

@{
    ViewData["Title"] = "Create Requester";
}

<div class="col-md-12 justify-content-center" >
    <div class="card" >
        <h4 class="card-header">Talep Oluştur</h4>
        <h5 class="card-header justify-content-center">Talep bildiren kişinin bilgilerini girdikten sonra taleple ilgili detayları ve görselleri ekleyerek talep oluşturabilirsiniz.</h5>
        <div class="card-body">
            <div>
                @if (ViewBag.Errors != null && ViewBag.Errors is List<string> errors)
                {
                    <div class="alert alert-danger">
                        <ul>
                            @foreach (var error in ViewBag.Errors)
                            {
                                <li>@error</li>
                            }
                        </ul>
                    </div>
                }
            </div>

            <form asp-action="Create"  enctype="multipart/form-data">
                <div class="mb-4">
                    <label asp-for="Tckn" maxlength="11" class="control-label">T.C Kimlik No</label>
                    <input asp-for="Tckn" class="form-control" />
                </div>
                <div class="mb-4">
                    <label asp-for="FirstName" class="control-label">İsim</label>
                    <input asp-for="FirstName" class="form-control" />
                </div>
                <div class="mb-4">
                    <label asp-for="Surname" class="control-label">Soyisim</label>
                    <input asp-for="Surname" class="form-control" />
                </div>
                <div class="mb-4">
                    <label asp-for="Email" class="control-label">E-Mail</label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="mb-4">
                    <label asp-for="TelNo" class="control-label" maxlength="11"> Telefon Numarası</label>
                    <input asp-for="TelNo" class="form-control" />
                </div>
                <div class="mb-4">
                    <label asp-for="Address" class="control-label">Adres</label>
                    <input asp-for="Address" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label">Açıklama</label>
                    <textarea class="form-control" asp-for="Description" rows="3"></textarea>
                </div>
                <div class="mb-4">
                    <label asp-for="RequestStatusId" class="control-label">Talep Durumu</label>
                    <select asp-for="RequestStatusId" class="form-control" asp-items="ViewBag.RequestStatusList"></select>
                </div>
                <div class="mb-4">
                    <label asp-for="RequestTypeId" class="control-label">Talep Tipi</label>
                    <select asp-for="RequestTypeId" class="form-control" asp-items="ViewBag.RequestTypeList"></select>
                </div>
                <div class="mb-4">
        <label for="formFileMultiple" class="form-label">Belge Yükle</label>
        <input class="form-control" type="file" id="formFileMultiple" name="files" multiple />
    </div>
                <div class="mb-12" style="justify-content:right;">
                    <a style="margin-right:10px;" href="@Url.Action("Index")">Listeye Geri Dön</a> &nbsp;
                    <input type="submit" value="Talep Oluştur" class="btn btn-dark " />
                </div>
            </form>
        </div>
    </div>
</div>


