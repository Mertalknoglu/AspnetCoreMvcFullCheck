@model Requester

@{
    ViewData["Title"] = "Edit Requester";
}

<h1>@ViewData["Title"]</h1>

<<div class="col-md-12 justify-content-center">
    <div class="card">
        <h4 class="card-header">Oluşturlan Talep Güncelle</h4>
        <h5 class="card-header justify-content-center">Talep oluştur ekranından seçtiğiniz talebi güncelleyebilirsiniz.</h5>
        <div class="card-body">
            <form asp-action="Edit">
                <div class="mb-4">
                    <label asp-for="Tckn" class="control-label">T.C Kimlik No</label>
                    <input asp-for="Tckn" class="form-control" />
                    <span asp-validation-for="Tckn" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="FirstName" class="control-label">İsim</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="Surname" class="control-label">Soyisim</label>
                    <input asp-for="Surname" class="form-control" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="Email" class="control-label">E-Mail</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="TelNo" class="control-label">Telefon Numarası</label>
                    <input asp-for="TelNo" class="form-control" />
                    <span asp-validation-for="TelNo" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="Address" class="control-label">Adres</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label">Açıklama</label>
                    <textarea class="form-control" asp-for="Description" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="RequestStatusId" class="control-label">Talep Durumu</label>
                    <select asp-for="RequestStatusId" class="form-control" asp-items="ViewBag.RequestStatusList"></select>
                </div>
                <div class="mb-4">
                    <label asp-for="RequestTypeId" class="control-label">Talep Tipi</label>
                    <select asp-for="RequestTypeId" class="form-control" asp-items="ViewBag.RequestTypeList"></select>
                </div>
                <div class="mb-4">
                    <label for="formFileMultiple" class="form-label">Belge Yükle</label>
                    <input class="form-control" type="file" id="formFileMultiple" multiple>
                </div>
                <div class="mb-12 justify-content-center">
                    <a href="@Url.Action("Index")">Listeye Geri Dönt</a> &nbsp;
                    <input type="submit" value="Güncelle" class="btn btn-primary " />
                </div>
            </form>
        </div>
    </div>
</div>
