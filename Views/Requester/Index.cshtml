@model IEnumerable<Requester>

@{
    ViewData["Title"] = "Requesters List";
}
<p>

</p>
<div class="card">
    <h5 class="card-header">Talep Listesi</h5>
    <h5 class="card-header justify-content-right">    <a href="@Url.Action("Create")">Create New</a></h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th></th>
                    <th>@Html.DisplayNameFor(model => model.Tckn)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                    <th>@Html.DisplayNameFor(model => model.Surname)</th>
                    <th>@Html.DisplayNameFor(model => model.RequestType)</th>
                    <th>@Html.DisplayNameFor(model => model.RequestStatus)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Tckn</td>
                        <td>@item.FirstName</td>
                        <td>@item.Surname</td>
                        <td>@item.RequestType.Type</td>
                        <td>@item.RequestStatus.Status</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown"><i class="bx bx-dots-vertical-rounded"></i></button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="@Url.Action("Edit", new { id = item.Id })"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a class="dropdown-item" href="@Url.Action("Delete", new { id = item.Id })"><i class="bx bx-trash me-1"></i> Delete</a>

                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>




