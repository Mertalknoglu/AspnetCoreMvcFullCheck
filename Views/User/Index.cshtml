@model List<AspnetCoreMvcFull.Models.ApplicationUser>
@{
    ViewData["Title"] = "Kullanıcılar";
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Bootstrap bundle (modal için gerekliyse) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
<link href="https://cdn.datatables.net/buttons/2.4.1/css/buttons.bootstrap5.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/jspdf@2.5.1/dist/jspdf.umd.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/html2canvas@1.4.1/dist/html2canvas.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/xlsx/dist/xlsx.full.min.js"></script>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.28/jspdf.plugin.autotable.min.js"></script>

<!-- DataTables (sadece jQuery'den sonra gelmeli!) -->
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
<!-- Export button destek dosyaları -->
<script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.bootstrap5.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.print.min.js"></script>
<div class="card">
    <div class="card-header pb-0">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="mb-0">Kullanıcı Listesi</h4>
            <a class="btn btn-dark" href="@Url.Action("Create", "User")">Yeni Kullanıcı Ekle</a>
        </div>
    </div>

    <div class="card-body">
        @Html.Partial("_UserPartial", Model)
    </div>
</div>
<div class="modal fade" id="userDetailModal" tabindex="-1" aria-labelledby="userDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="userDetailModalLabel" style="color:white;">Kullanıcı Detayları</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <div class="container text-muted">
                    <div class="row py-2 border-bottom">
                        <div class="col-5 fw-bold text-dark">T.C Kimlik No:</div>
                        <div class="col-7" id="detailTc"></div>
                    </div>
                    <div class="row py-2 border-bottom">
                        <div class="col-5 fw-bold text-dark">Ad Soyad:</div>
                        <div class="col-7" id="detailName"></div>
                    </div>
                    <div class="row py-2 border-bottom">
                        <div class="col-5 fw-bold text-dark">Email:</div>
                        <div class="col-7" id="detailEmail"></div>
                    </div>
                    <div class="row py-2 border-bottom">
                        <div class="col-5 fw-bold text-dark">Telefon:</div>
                        <div class="col-7" id="detailPhone"></div>
                    </div>
                    <div class="row py-2 border-bottom">
                        <div class="col-5 fw-bold text-dark">Birim:</div>
                        <div class="col-7" id="detailUnit"></div>
                    </div>
                    <div class="row py-2">
                        <div class="col-5 fw-bold text-dark">Rol:</div>
                        <div class="col-7" id="detailRole"></div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>
